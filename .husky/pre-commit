#!/usr/bin/env sh
set -eu

# Cross-platform Gradle launcher
case "$(uname -s)" in
  MINGW*|MSYS*|CYGWIN*)
    GRADLE_CMD='cmd.exe /C .\gradlew.bat'
    ;;
  *)
    GRADLE_CMD='./gradlew'
    ;;
esac

# Example: replace direct gradle calls with the variable
# ./gradlew lint
$GRADLE_CMD lint
# ./gradlew -q check
$GRADLE_CMD -q check